<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/scanner_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <benefit.platfrom.zxing.zxing.view.ViewfinderView
            android:id="@+id/viewfinder_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:corner_color="@color/color_white"
            app:frame_color="@color/viewfinder_frame"
            app:label_text=""
            app:label_text_color="@color/colorAccent"
            app:laser_color="@color/color_white"
            app:mask_color="@color/viewfinder_mask"
            app:result_color="@color/result_view"
            app:result_point_color="@color/result_point_color"/>
        <LinearLayout
            android:id="@+id/scanner_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/scanner_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="返回"
                android:drawableLeft="@mipmap/btn_nav_back"
                android:textColor="#fff"
                android:textSize="16sp"
                android:padding="10dp"/>


        </LinearLayout>
    </FrameLayout>

</LinearLayout>